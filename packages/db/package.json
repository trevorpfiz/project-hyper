{
  "name": "@hyper/db",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "default": "./dist/client.js"
    },
    "./schema": {
      "types": "./dist/schema/index.d.ts",
      "default": "./dist/schema/index.js"
    }
  },
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf .turbo dist node_modules",
    "dev": "tsc",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint",
    "dk-generate": "sst shell drizzle-kit generate",
    "migrate": "sst shell drizzle-kit migrate",
    "migrate:script": "sst shell tsx src/migrate.ts",
    "push": "sst shell drizzle-kit push",
    "studio": "sst shell drizzle-kit studio",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false",
    "with-env": "dotenv -e ../../.env --"
  },
  "dependencies": {
    "@aws-sdk/client-rds-data": "^3.609.0",
    "drizzle-orm": "^0.31.4",
    "drizzle-zod": "^0.5.1",
    "pg": "^8.12.0"
  },
  "devDependencies": {
    "@hyper/eslint-config": "workspace:*",
    "@hyper/prettier-config": "workspace:*",
    "@hyper/tsconfig": "workspace:*",
    "dotenv-cli": "^7.4.2",
    "drizzle-kit": "^0.22.8",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "tsx": "^4.9.3",
    "typescript": "catalog:"
  },
  "prettier": "@hyper/prettier-config"
}
